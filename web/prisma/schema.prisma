generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  name            String   @db.VarChar(60)
  github_username String
  email           String
  avatar_url      String?
  createdAt       DateTime @default(now())

  teamUsers TeamUser[]
}

model Team {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())

  projects  Project[]
  teamUsers TeamUser[]
}

model Project {
  id        String   @id @default(uuid())
  teamSlug  String
  slug      String
  name      String
  createdAt DateTime @default(now())

  url               String
  allowed_hosts     String
  public_statistics Boolean @default(false)

  team Team @relation(fields: [teamSlug], references: [slug], onDelete: Cascade)

  customEvents  CustomEvent[]
  pageViewsNext PageViewNext[]

  @@unique([teamSlug, slug])
}

model TeamUser {
  userId String
  teamId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
}

model CustomEvent {
  projectId String
  date      DateTime @db.Date
  hour      Int
  name      String

  count Int

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([projectId, date, hour, name])
}

model PageViewNext {
  id String @id @default(uuid()) @db.Uuid

  date      DateTime @db.Timestamptz(3)
  pathname  String
  user_hash String
  referrer  String?
  browser   String?
  device    String?
  os        String?

  locationId Int
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([date], type: Brin)
}

model Location {
  id        Int    @id @default(autoincrement())
  flag      String
  country   String
  city      String
  latitude  Float
  longitude Float

  pageViews PageViewNext[]

  @@unique([country, city])
}
